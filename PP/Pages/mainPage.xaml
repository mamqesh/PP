<Page x:Class="PP.Pages.mainPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="mainPage" Background="White">

    <Grid>
        <TabControl HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920"
                    Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="ДОБАВИТЬ ПРОДУКТ">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="111*"/>
                        <ColumnDefinition Width="209*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="18*"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="29*"/>
                        <RowDefinition Height="181*"/>
                    </Grid.RowDefinitions>
                    <TextBox Name="textBoxIDProduct" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="646"
                             materialDesign:HintAssist.Hint="ID" FontSize="20"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Row="1"/>
                    <TextBox Name="textBoxNumberProduct" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="646"
                        materialDesign:HintAssist.Hint="Номер продукции" FontSize="20"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Row="2"/>
                    <TextBox Name="textBoxNameProduct" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="646"
                        materialDesign:HintAssist.Hint="Наименование продукции" FontSize="20"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Row="3"/>
                    <TextBox Name="textBoxCountProduct" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="346"
                        materialDesign:HintAssist.Hint="Количество" FontSize="20"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Row="4"/>
                    <ComboBox Name="comboBoxUnitName" ItemsSource="{Binding units}" SelectedItem="{Binding product.Unit1}" HorizontalAlignment="Left" Margin="392,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="264" Height="67"
                              materialDesign:HintAssist.Hint="Ед. измерения" FontSize="20"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding UnitName}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBox Name="textBoxNoteProduct" HorizontalAlignment="Left" Height="62" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="646"
                        materialDesign:HintAssist.Hint="Примечания" FontSize="20"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Grid.Row="5"/>
                    <Button Content="ДОБАВИТЬ" HorizontalAlignment="Left" Margin="392,10,0,0" Grid.Row="6" VerticalAlignment="Top"
                            Width="264" Height="73" FontSize="20" Click="Button_Click"/>
                </Grid>

            </TabItem>
            <TabItem Header="ДАННЫЕ ЗА ПЕРИОД">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="РАЗНОЕ">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
